<body>
  <link rel="stylesheet" href="/style.css">
  <div class='menu' align='right'>
    <a href="/">
      <img src='/images/makers_logo.png' class="logo" align="left"></img>
    </a>
    <ul>
      <li>
        <form action = '/spaces'>
          <input type="submit" value="Spaces">
        </form>
      </li>
      <li>
        <form class='active' action = '/requests'>
          <input type="submit" value="Requests">
        </form>
      </li>
      <li>
        <form action = '/sessions' method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Logout">
        </form>
      </li>
    </ul>
  </div>

<h1>Requests</h1>
<table>
  <tr>
    <th>Requests I've made</th>
    <th>Requests I've received</th>
  </tr>
  <tr>
    <td><% @booking_requests.each do |request| %>
      <%= request.space.name %>
      <%= request.booking_date %>
    <% end %>
    </td>
    <td></td>
  </tr>
</table>

</body>
