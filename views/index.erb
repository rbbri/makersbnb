<% if @user.nil? %>
  <div class='sign_up_form' align='center'>
  <form id='sign_up' action='/users' method='post'>
    Sign up to MakersBnB

    <p>
      <label for='name' align='left'> Name  </label>
      <input type="text" id='name' name='name'>
    </p>

    <p>
      <label for='username' align='left'> Username  </label>
      <input type="text" id='username' name='username'>
    </p>

    <p>
      <label for='password' align='left'> Password </label>
      <input type="text" id='password' name='password'>
    </p>

    <p>
      <label for='email' align='left'> Email Address  </label>
      <input type="text" id='email' name='email'>
    </p>

    <p>
      <input type="submit" name="Sign Up" value="Sign Up">
    </p>
  </div>
<% else %>
  <h2>Welcome <%= @user.name %>!</h2>
<% end %>

</body>
