<div class='log_in_form' align='center'>
  <form id='log_in' method='post' action='/sessions'>
    <h3>Log in to MakersBnB</h3>
    <table id="sign_up_table">
      <th></th>
      <th></th>
      <tr>
        <td><label for='username'> Username </label></td>
        <td><input type="text" id='username' name="username"></td>
      </tr>
      <tr>
        <td><label for='password'> Password </label></td>
        <td><input type="password" id='password' name="password"></td>
      </tr>
      <div>
        <%= flash[:error] %>
      </div>
    </table>
  <p>
    <input style="width: 50%"  type="submit" id="log_in" value="Login">
  </p>
</div>
